{

  "manifest_version": 2,
  "name": "OnPageSeoCheck",
  "version": "0.1",

  "description": "Checks for common on page seo errors.",

  "icons": {
    "32": "icons/seo-32.png",
    "48": "icons/seo-48.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],

  "background": {
    "scripts": ["background-script.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icons/seo-32.png",
    "theme_icons": [{
      "light": "icons/seo-32.png",
      "dark": "icons/seo-32.png",
      "size": 32
    }],
    "default_title": "OnPageSeoCheck"
  }
}
